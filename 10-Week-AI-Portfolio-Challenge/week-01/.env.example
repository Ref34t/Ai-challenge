# Environment Configuration for Story Generator
# Copy this file to .env and add your actual values

# OpenAI Configuration (Optional - for enhanced story generation)
OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration
MODEL_NAME=microsoft/DialoGPT-medium
USE_OPENAI=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Streamlit Configuration
STREAMLIT_HOST=localhost
STREAMLIT_PORT=8501

# Deployment Configuration
DEPLOYMENT_PLATFORM=streamlit_cloud
# Options: streamlit_cloud, huggingface_spaces, heroku, railway

# Advanced Model Settings
MAX_TOKENS_DEFAULT=300
TEMPERATURE_DEFAULT=0.7
DEVICE=auto  # Options: auto, cpu, cuda

# Logging
LOG_LEVEL=INFO